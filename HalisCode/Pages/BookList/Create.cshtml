@page
@model HalisCode.Pages.BookList.CreateModel

<br />
<h3 class="text-info">Create Book</h3>
<br />

<div class="container border p-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row  form-group">
            <div class="col-3">
                <label asp-for="Books.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.Name" class="form-control" />
            </div>
            <span asp-validation-for="Books.Name" class="text-danger"></span>
        </div>
        <div class="row  form-group">
            <div class="col-3">
                <label asp-for="Books.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.Author" class="form-control" />
            </div>
            <span asp-validation-for="Books.Author" class="text-danger"></span>
        </div>
        <div class="row  form-group">
            <div class="col-3">
                <label asp-for="Books.Isbn"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.Isbn" class="form-control" />
            </div>
            <span asp-validation-for="Books.Isbn" class="text-danger"></span>
        </div>
        <div class="row  form-group">
            <div class="col-3 offset-3">
                <input type="submit" value="Submit" class="btn btn-primary form-control" asp-for="Books.Isbn" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control" >Back To List</a>
            </div>
        </div>
    </form>
</div>



@section scripts{
<partial name="_ValidationScriptsPartial" />
}